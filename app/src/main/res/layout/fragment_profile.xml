<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Welcome Text on Top Right -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘‹ Welcome, Student"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2F346F"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp" />

    <!-- FrameLayout for Card and Buttons -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeText"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- CardView for Booking Info -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/libraryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="ðŸ¢ Library: XYZ Library"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/seatNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="ðŸ’º Seat No: 10"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="ðŸ“… Plan: 1 Year"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/remainingDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="â³ Days Left: 3"
                        android:textColor="#333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“† End Date: 06/04/2001"
                        android:textColor="#333"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- âŒ Cancel Booking Button -->
            <Button
                android:id="@+id/btnCancelBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Cancel Booking"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E53935"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:textStyle="bold" />

            <!-- ðŸ“œ Booking History Button -->
            <Button
                android:id="@+id/btnHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“œ Booking History"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3F51B5"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnGoToPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’³ Make Payment"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>