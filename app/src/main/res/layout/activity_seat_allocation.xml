<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Student Name -->
        <EditText
            android:id="@+id/etStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Name"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/edit_text" />

        <!-- Mobile -->
        <EditText
            android:id="@+id/etMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/edit_text" />

        <!-- Coming Time -->
        <EditText
            android:id="@+id/etComingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coming Time"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/edit_text" />

        <!-- Go Time -->
        <EditText
            android:id="@+id/etGoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Go Time"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/edit_text" />

        <!-- Membership Plan -->
        <Spinner
            android:id="@+id/spinnerPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvChooseSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a Seat:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Seat Grid -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/seatGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="5"
            app:rowCount="4"
            app:alignmentMode="alignMargins"
            app:useDefaultMargins="true"
            android:layout_marginBottom="20dp" />

        <!-- Book Button -->
        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Seat"
            android:textColor="@android:color/white"
            android:backgroundTint="#2196F3"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>