<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ownerProfileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Owner Welcome -->
    <TextView
        android:id="@+id/tvOwnerProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- Add New Lab Button -->
    <Button
        android:id="@+id/btn_add_new_lab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Lab"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView for Labs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ownerLabRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Student Section Title -->

    <!-- RecyclerView for Booked Students -->

</LinearLayout>
